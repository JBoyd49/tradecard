<% if (loggedIn) { %>
    <%- include('headerloggedin') %>
        <% } else { %>
            <%- include('header') %>
                <% } %>

                    <main>
                        <div class="loginpage">
                            <div class="logintitle">
                                <h1>Login</h1>
                            </div>

                            <div class="loginform">
                                <form action="/login" method="POST"> 
                                    <p>
                                        Username : <input name="username"><br><br>
                                        Password : <input name="password" type="password">
                                    </p>
                                    <input class="loginbutton" type="submit" value="Login">
                                </form>
                            </div>
                        </div>

                    </main>
                    </html>